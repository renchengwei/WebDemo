<!-- 	    	<append>true</append>   -->
<!-- 	    <encoder>   -->
<!-- 	      	<pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>   -->
<!-- 	    </encoder>   -->
<!--   	</appender>   -->

	<root level="INFO">
		<appender-ref ref="STDOUT" />
<!-- 		<appender-ref ref="FILE" /> -->
	</root>
</configuration>